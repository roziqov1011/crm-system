<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/css/student.css">
    <title>Student</title>
</head>

<body>
    <header style="height: 100px;">
        <div class="logo d-flex align-items-center">
            <a href="#">
                <img src="https://github.com/roziqov1011/LOGO/blob/main/img/logo-indigo.png?raw=true" alt=""
                    width="100" height="100">
            </a>
            <h2 class="ms-3">Student page</h2>
        </div>
    </header>

    <div class="container student-wrap">
        <div class="left">
            <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasTop"
                aria-controls="offcanvasTop">Vazifalrani ko'rish</button>

            <div class="offcanvas offcanvas-top" tabindex="-1" id="offcanvasTop" aria-labelledby="offcanvasTopLabel">
                <div class="offcanvas-header">
                    <h5 id="offcanvasTopLabel">Sizning vazifalaringiz</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <table class="table table-striped table-hover table-teacher">

                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Nomi
                                </th>
                                <th>
                                    Izoh
                                </th>
        
                                <th>
                                    Guruhingiz
                                </th>
                                <th>
                                    Ustozingiz
                                </th>
                            </tr>
                        </thead>
                        <tbody>
        
                            <%for(let homeWork of foundHomeWork){ %>
                                <tr>
                                    <td><%= homeWork.id %></td>
                                    <td><%= homeWork.name %></td>
                                    <td><%= homeWork.izoh %></td>
                                    <td><%= homeWork.groupName%></td>
                                    <td><%= homeWork.teacherName%></td>
                                </tr>

                                <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="right">
            <table class="table table-striped table-hover table-teacher">

                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Ismingiz
                        </th>
                        <th>
                            Kursingiz
                        </th>

                        <th>
                            Guruhingiz
                        </th>
                        <th>
                            Ustozingiz
                        </th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td><%= foundStudent.id %></td>
                        <td><%= foundStudent.username %></td>
                        <td><%= foundStudent.course %></td>
                        <td><%= foundStudent.groupName%></td>
                        <td><%= foundStudent.teacherName%></td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
    <script src="assets/js/student.js"></script>
</body>

</html>