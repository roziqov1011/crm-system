<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/css/admin.css">
    <title>Admin</title>
</head>

<body>
    <header style="height: 100px;">
        <div class="logo">
            <div class="d-flex align-items-center">
                <a href="#">
                    <img src="https://github.com/roziqov1011/LOGO/blob/main/img/logo-indigo.png?raw=true" alt=""
                        width="100">
                </a>
                <h2 class="ms-3">Admin page</h2>
            </div>
            <button class="btn btn-primary qoshish" type="button" data-bs-toggle="offcanvas" data-bs-target="#teacher" aria-controls="teacher"
                 >O'qituvchilar qoshish</button>
        </div>
    </header>
    <main class="container">
       
        <div class="left">
            <ul class="left-list">
                <li>
                    <button class="btn btn-success mt-3 course btn-before">Qurslar</button>
                </li>
                <li>
                    <button class="btn btn-success mt-3 teacher ">O'qituvchilar</button>
                </li>
                <li>
                    <button class="btn btn-success mt-3 group">Guruhlar</button>
                </li>
                <li>
                    <button class="btn btn-success mt-3 student">O'quvchilar</button>
                </li>
            </ul>
        </div>
        <div class="right">
            <div>

                <div class="offcanvas offcanvas-end" tabindex="-1" id="teacher" aria-labelledby="offcanvasRightLabel">
                    <div class="offcanvas-header">
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <form action="/admin" method="post" enctype="application/x-www-form-urlencoded">
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Ism</label>
                                <input name="username" type="text" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" required placeholder="Ism">
                            </div>
                            <input class="disabled" name="role" type="text"  value="teacher">
                            <div class="mb-3">
                                <label for="exampleInputPassword1" class="form-label">Telefon raqam</label>
                                <input name="phoneNumber" type="number" class="form-control" id="exampleInputPassword1" required
                                    placeholder="Tel...">
                            </div>
                            <select name="course" class="form-select" aria-label="Default select example">
                                <option selected>Kurslar</option>
                                <%
                                for (let course of allCourses ) { %>
                                    <option value="<%= course.coursName %>"><%= course.coursName %></option>
                                <% } %>
                            </select>
                            <button type="submit" class="btn btn-success mt-3">Submit</button>
                        </form>
                    </div>
                </div>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="student" aria-labelledby="offcanvasRightLabel">
                    <div class="offcanvas-header">
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <form action="/admin" method="post" enctype="application/x-www-form-urlencoded">
                            <h2>student</h2>
                            <div class="mb-3">
                                <input class="disabled" name="role" type="text"  value="student">
                                <label for="exampleInputEmail1" class="form-label">Ism</label>
                                <input type="text" name="username" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" required placeholder="Ism">
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputPassword1" class="form-label">Telefon raqam</label>
                                <input name="phoneNumber" type="number" class="form-control" id="exampleInputPassword1" required
                                    placeholder="Tel...">
                            </div>
                            <h6 class="mt-3">Kursi</h6>
                            <select name="course" class="form-select" aria-label="Default select example">
                                <option selected>Kurslar</option>
                                <%
                                for (let course of allCourses ) { %>
                                    <option value="<%= course.coursName %>"><%= course.coursName %></option>
                                <% } %>
                            </select>
                            <h6 class="mt-3">O'qituvchi</h6>
                            <select name="teacherName" class="form-select" aria-label="Default select example">
                                <option selected>O'qituvchilar</option>
                                <%
                                for (let teacher of foundTeacher ) { %>
                                    <option value="<%= teacher.username %>"><%= teacher.username %> -> <%= teacher.course%>chi </option>
                                <% } %>
                            </select>
                            <h6 class="mt-3">Gruhi</h6>
                            <select name="groupName" class="form-select " aria-label="Default select example">
                                <option selected>gruhlar</option>
                                <%
                                for (let group of allGroups ) { %>
                                    <option value="<%= group.groupName %>"><%= group.groupName %> -> <%= group.teacherName %> </option>
                                <% } %>
                            </select>
                            <button type="submit" class="btn btn-success mt-3">Submit</button>
                        </form>
                    </div>
                </div>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="course" aria-labelledby="offcanvasRightLabel">
                    <div class="offcanvas-header">
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <form action="/admin" method="post" enctype="application/x-www-form-urlencoded">
                            <div class="mb-3">
                                <input class="disabled" name="role" type="text"  value="course">
                                <label for="exampleInputEmail1" class="form-label">Kurs nomi</label>
                                <input name="coursName" type="text" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" required placeholder="Nomi..">
                            </div>
                            <select name="teacherName" class="form-select mt-3" aria-label="Default select example">
                                <option selected>O'qituvchilar</option>
                                <%
                                for (let teacher of foundTeacher ) { %>
                                    <option value="<%= teacher.username %>"><%= teacher.username %> -> <%= teacher.course%>chi</option>
                                <% } %>
                            </select>
                            <button type="submit" class="btn btn-success mt-3">Submit</button>
                        </form>
                    </div>
                </div>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="group" aria-labelledby="offcanvasRightLabel">
                    <div class="offcanvas-header">
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <form action="/admin" method="post" enctype="application/x-www-form-urlencoded">
                            <div class="mb-3">
                                <input class="disabled" name="role" type="text"  value="group">
                                <label for="exampleInputEmail1" class="form-label">Guruh nomi</label>
                                <input name="groupName" type="text" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" required placeholder="Guruh nomi...">
                            </div>
                            <select name="courseName" class="form-select mt-3" aria-label="Default select example">
                                <option selected>Kurslar</option>
                                <%
                                for (let course of allCourses ) { %>
                                    <option value="<%= course.coursName %>"><%= course.coursName %></option>
                                <% } %>
                            </select>
                            <select name="teacherName" class="form-select mt-3" aria-label="Default select example">
                                <option selected>O'qituvchilar</option>
                                <%
                                for (let teacher of foundTeacher ) { %>
                                    <option value="<%= teacher.username %>"><%= teacher.username %> -> <%= teacher.course %> </option>
                                <% } %>
                            </select>
                            <button type="submit" class="btn btn-success mt-3">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
           <div class="table_wrap">
            <table class="table table-striped table-hover table-teacher show">

                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Kurs
                        </th>
                        
                        <th>
                            Tel
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <%const users = allUsers.filter(e => e.role == 'teacher') 
                    for (let user of users ) { %>
                    <tr>    
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.course %></td>
                        <td><a href="tel:<%= user.phoneNumber %>"><%= user.phoneNumber %></a></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
            <table class="table table-striped table-hover table-student">

                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Kursi
                        </th>
                        <th>
                            Tel raqam
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <%const students = allUsers.filter(e => e.role == 'student') 
                    for (let user of students ) { %>
                    <tr>    
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.course %></td>
                        <td><a href="tel:<%= user.phoneNumber %>"><%= user.phoneNumber %></a></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
            <table class="table table-striped table-hover table-group">

                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Nomi
                        </th>
                        <th>
                            Kursi
                        </th>
                        <th>
                            O'qituvchi
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <%
                    for (let group of allGroups ) { %>
                    <tr>    
                        <td><%= group.id %></td>
                        <td><%= group.groupName %></td>
                        <td><%= group.courseName %></td>
                        <td><%= group.teacherName %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
            <table class="table table-striped table-hover table-cours">

                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Nomi
                        </th>
                        <th>
                            O'qituvchi
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <%
                    for (let course of allCourses ) { %>
                    <tr>    
                        <td><%= course.id %></td>
                        <td><%= course.coursName%></td>
                        <td><%= course.teacherName%></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
           </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
    <script src="assets/js/admin.js"></script>
</body>

</html>