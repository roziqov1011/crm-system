<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/css/teacher.css">
    <title>Document</title>
</head>

<body>
    <header style="height: 100px;">
        <div class="logo">
            <div class="d-flex align-items-center">
                <a href="#">
                    <img src="https://github.com/roziqov1011/LOGO/blob/main/img/logo-indigo.png?raw=true" alt=""
                        width="100">
                </a>
                <h2 class="ms-3">Teacher page</h2>
            </div>
            <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Vazifa yukalsh</button>
        </div>
    </header>
    <main class="main">
        <div class="container wrapper">
            <div class="left">
                <button class="btn btn-success work-btn btn-before ">yuklangan vazifalar</button>
                <button class="btn btn-success teacher-btn  mt-3">O'quvchilaringiz</button>
                <button class="btn btn-success group-btn mt-3">Guruhlaringiz</button>
            </div>
            <div class="right">

                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight"
                    aria-labelledby="offcanvasRightLabel">
                    <div class="offcanvas-header">
                        <h5 id="offcanvasRightLabel">Vazifa yuklang</h5>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <form action="/teacher" method="post" enctype="application/x-www-form-urlencoded">
                            <div class="mb-3">
                              <label for="exampleInputEmail1" class="form-label">Vazifa nomi</label>
                              <input name="homeWorkName" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Vazifa">
                            </div>
                            <div class="mb-3">
                              <textarea name="textarea" id="" class="form-control" cols="30" rows="10" placeholder="Izoh"></textarea>
                            </div>

                            <label for="exampleInputEmail2" class="form-label">Guruhni tanlang</label>
                              <select name="group" class="form-select" aria-label="Default select example" id="exampleInputEmail2">
                                <option selected>Guruhlar</option>
                                <%
                                for (let group of foundGroups ) { %>
                                    <option value="<%= group.groupName %>"><%= group.groupName %></option>
                                <% } %>
                            </select>
                            <button type="submit" class="btn btn-primary mt-3">Submit</button>
                          </form>
                    </div>
                </div>
                <table class="table table-striped table-hover table-student show">

                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Nomi
                            </th>
                            <th>
                                Kursi
                            </th>
                            <th>
                                Tel raqam
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 
                        for (let student of foundStudent ) { %>
                        <tr>
                            <td><%= student.id %></td>
                            <td><%= student.username %></td>
                            <td><%= student.course %></td>
                            <td><a href="tel:<%= student.phoneNumber %>"><%= student.phoneNumber %></a></td>
                        </tr>
                        <% } %>
                    </tbody>

                </table>
                <table class="table table-striped table-hover table-group">

                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Nomi
                            </th>
                            <th>
                                Kursi
                            </th>
                            <th>
                                O'qituvchi
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 
                        for (let group of foundGroups ) { %>
                        <tr>
                            <td><%= group.id %></td>
                            <td><%= group.groupName %></td>
                            <td><%= group.courseName %></td>
                            <td><%= group.teacherName %></td>
                        </tr>
                        <% } %>
                    </tbody>

                </table>
                <table class="table table-striped table-hover table-homework">

                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Nomi
                            </th>
                            <th>
                                Izoh
                            </th>
                            <th>
                                Guruh
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 
                        for (let work of foundWork ) { %>
                        <tr>
                            <td><%= work.id %></td>
                            <td><%= work.name %></td>
                            <td><%= work.izoh %></td>
                            <td><%= work.groupName %></td>
                        </tr>
                        <% } %>
                    </tbody>

                </table>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
    <script src="assets/js/teacher.js"></script>
</body>

</html>